{% extends "base.html.twig" %}

{% block title %}Movies{% endblock %}

{% block head %}

{% endblock %}

{% block content %}
    <h1> {{ movie.title }} {{ movie.date  | date('d/m/Y')}} <h1>
    <small>
        {{movie.genre.name}} - {{movie.director.first_name}}  {{movie.director.last_name}}
    </small>
    <br>
    {{ movie.duration }}
    <div>
        <img src="{{ movie.coverImage }}" width="100">
    </div>

    <p>{{ movie.description }}</p>

    <div>
    {% for actor in movie.actor %}
    {{ actor.first_name }} 
    {{ actor.last_name }} <br> 
   {% endfor %}
   </div>

{% endblock %}

